<section class="intro-section">
  <squarespace:block-field id="intro-text" columns="12"/>
</section>

<section class="event-section">
  <squarespace:query collection="events" limit="5">
    {.repeated section items}
    <div class="event-item">
      <h2>{title}</h2>
      <p>{body}</p>
    </div>
    {.end}
  </squarespace:query>
</section>

<section class="blog-section">
  <squarespace:query collection="blog" limit="10">
    {.repeated section items}
    <div class="blog-item">
      <h2>{title}</h2>
      <p>{excerpt}</p>
    </div>
    {.end}
  </squarespace:query>
</section>